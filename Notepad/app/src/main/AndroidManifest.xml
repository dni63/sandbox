<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bonam.notepad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CreateNoteActivity"
            android:label="@string/app_name"
            android:parentActivityName=".NoteListActivityMultiColumn"/>
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.bonam.notepad.NoteListActivityMultiColumn" />

        <activity
            android:name=".ListNoteActivity"
            android:label="@string/title_activity_list_note">

        </activity>
        <activity
            android:name=".NoteListActivityMultiColumn"
            android:label="@string/title_activity_note_list_activity_multi_column">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
